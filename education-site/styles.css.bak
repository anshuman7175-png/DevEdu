:root {
  --bg: #f7f2ea;
  --ink: #1c1b1a;
  --muted: #5f5b57;
  --brand: #0e7c7b;
  --brand-2: #f29f05;
  --accent: #e4572e;
  --card: #ffffff;
  --stroke: #e6ded2;
  --shadow: 0 12px 30px rgba(13, 27, 30, 0.12);
  --radius: 18px;
}

* {
  box-sizing: border-box;
}

body {
  margin: 0;
  font-family: "Hind", "Noto Sans", sans-serif;
  color: var(--ink);
  background: radial-gradient(1200px 600px at 10% -10%, #fff6d9, transparent 70%),
    radial-gradient(900px 700px at 90% 0%, #e8f6f3, transparent 60%),
    linear-gradient(180deg, #f7f2ea 0%, #f4efe5 40%, #f7f2ea 100%);
  min-height: 100vh;
  font-size: 16px;
}

body.age-young {
  font-size: 18px;
}

body.age-young .card,
body.age-young .lesson-card,
body.age-young .media-card,
body.age-young .big-tile {
  border-width: 2px;
  border-color: #ffd79b;
}

body.age-young .card:nth-of-type(odd),
body.age-young .lesson-card:nth-of-type(odd),
body.age-young .media-card:nth-of-type(odd),
body.age-young .big-tile:nth-of-type(odd) {
  background: linear-gradient(180deg, #fff8e8, #fff);
}

body.age-young .card:nth-of-type(even),
body.age-young .lesson-card:nth-of-type(even),
body.age-young .media-card:nth-of-type(even),
body.age-young .big-tile:nth-of-type(even) {
  background: linear-gradient(180deg, #e9fbf8, #fff);
}

body.age-young h1 {
  font-size: 2.4rem;
}

body.age-young h2 {
  font-size: 1.9rem;
}

body.age-young .button {
  padding: 0.75rem 1.4rem;
  font-size: 1rem;
}

h1, h2, h3, h4 {
  font-family: "Baloo 2", "Hind", sans-serif;
  margin: 0 0 0.4rem 0;
}

p {
  margin: 0 0 1rem 0;
  color: var(--muted);
}

a {
  color: inherit;
  text-decoration: none;
}

img {
  max-width: 100%;
  display: block;
}

.container {
  width: min(1120px, 92vw);
  margin: 0 auto;
}

.nav {
  position: sticky;
  top: 0;
  z-index: 20;
  background: rgba(247, 242, 234, 0.9);
  backdrop-filter: blur(10px);
  border-bottom: 1px solid var(--stroke);
}

.nav-inner {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0.8rem 0;
}

.brand {
  display: flex;
  align-items: center;
  gap: 0.7rem;
  font-weight: 700;
}

.brand-badge {
  width: 40px;
  height: 40px;
  border-radius: 12px;
  background: conic-gradient(from 120deg, var(--brand), var(--brand-2), var(--accent), var(--brand));
  box-shadow: var(--shadow);
}

.nav-links {
  display: flex;
  gap: 1.2rem;
  font-weight: 600;
}

.nav-actions {
  display: flex;
  align-items: center;
  gap: 0.6rem;
}

.button {
  border: none;
  border-radius: 999px;
  padding: 0.55rem 1.1rem;
  background: var(--ink);
  color: #fff;
  cursor: pointer;
  font-weight: 600;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.button.secondary {
  background: #fff;
  color: var(--ink);
  border: 1px solid var(--stroke);
}

.button.ghost {
  background: transparent;
  border: 1px dashed var(--stroke);
  color: var(--muted);
}

.button:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow);
}

.hero {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  gap: 2rem;
  padding: 3.5rem 0 2.5rem;
  align-items: center;
}

.hero-card {
  background: var(--card);
  border-radius: var(--radius);
  padding: 1.8rem;
  box-shadow: var(--shadow);
}

.hero-stats {
  display: grid;
  grid-template-columns: repeat(3, minmax(0, 1fr));
  gap: 1rem;
  margin-top: 1.4rem;
}

.stat {
  background: #fdf8ef;
  border-radius: 16px;
  padding: 0.8rem;
  text-align: center;
  font-weight: 700;
}

.section {
  padding: 2.2rem 0 2.8rem;
}

.grid-3 {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(230px, 1fr));
  gap: 1.2rem;
}

.resource-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 1rem;
  margin: 1rem 0;
}

.resource-card {
  background: #fff;
  border-radius: 16px;
  padding: 1rem;
  border: 1px solid #f1ece2;
  box-shadow: var(--shadow);
  display: grid;
  gap: 0.6rem;
}

.card {
  background: var(--card);
  border-radius: var(--radius);
  padding: 1.3rem;
  box-shadow: var(--shadow);
  border: 1px solid #f1ece2;
}

.badge {
  display: inline-flex;
  align-items: center;
  gap: 0.4rem;
  background: #fdf1e3;
  color: #8a4b08;
  border-radius: 999px;
  padding: 0.2rem 0.6rem;
  font-size: 0.85rem;
  font-weight: 600;
}

.chip-row {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
}

.chip {
  background: #eff7f6;
  border-radius: 999px;
  padding: 0.35rem 0.8rem;
  font-weight: 600;
  font-size: 0.85rem;
}

.feature {
  display: grid;
  grid-template-columns: 1.2fr 1fr;
  gap: 1.6rem;
  align-items: center;
}

.controls {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
  gap: 0.8rem;
  margin: 1rem 0;
}

.age-toggle {
  display: inline-flex;
  gap: 0.5rem;
  flex-wrap: wrap;
  margin: 0.8rem 0 1.4rem;
}

input, select, textarea {
  width: 100%;
  padding: 0.6rem 0.8rem;
  border-radius: 12px;
  border: 1px solid var(--stroke);
  font-family: inherit;
}

.lesson-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
  gap: 1rem;
}

.media-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 1rem;
}

.media-card {
  background: #fff;
  border-radius: 16px;
  padding: 1rem;
  border: 1px solid #f1ece2;
  display: grid;
  gap: 0.7rem;
}

.video-frame {
  background: linear-gradient(160deg, #d8f0ef, #ffe8c2);
  border-radius: 14px;
  min-height: 150px;
  display: grid;
  place-items: center;
  font-weight: 700;
  color: #5c4a2a;
  overflow: hidden;
}

.video-frame iframe,
.video-frame video {
  width: 100%;
  height: 100%;
  border: 0;
  border-radius: 12px;
}

.video-frame video {
  background: #000;
}

.lesson-card {
  background: #fff;
  border-radius: 16px;
  padding: 1rem;
  border: 1px solid #f1ece2;
  display: flex;
  flex-direction: column;
  gap: 0.6rem;
}

.lesson-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 0.4rem;
  color: #7b6a59;
  font-size: 0.85rem;
  font-weight: 600;
}

.video-placeholder {
  background: linear-gradient(120deg, #ffe8c2, #d8f0ef);
  border-radius: 14px;
  padding: 1rem;
  min-height: 120px;
  display: grid;
  place-items: center;
  color: #6b4b1a;
  font-weight: 700;
  overflow: hidden;
}

.video-placeholder iframe,
.video-placeholder video {
  width: 100%;
  height: 100%;
  border: 0;
  border-radius: 12px;
}

.quiz-panel {
  display: grid;
  gap: 1rem;
}

.dashboard-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
  gap: 1.2rem;
}

.metric {
  display: grid;
  gap: 0.5rem;
}

.bar-stack {
  display: grid;
  gap: 0.4rem;
}

.bar {
  height: 10px;
  background: #efe4d5;
  border-radius: 999px;
  overflow: hidden;
}

.bar span {
  display: block;
  height: 100%;
  background: linear-gradient(90deg, var(--brand), var(--brand-2));
}

.tiles-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 1rem;
}

.big-tile {
  background: #fff;
  border-radius: 20px;
  padding: 1.4rem;
  font-size: 1.1rem;
  font-weight: 700;
  border: 1px solid #f1ece2;
  box-shadow: var(--shadow);
}

.profile-bar {
  display: grid;
  gap: 0.7rem;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  align-items: center;
  margin: 1rem 0 1.5rem;
}

.lesson-map {
  display: grid;
  gap: 1rem;
}

.lesson-map-row {
  display: grid;
  gap: 0.6rem;
}

.lesson-map-track {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
  gap: 0.6rem;
}

.lesson-map-node {
  background: #fff;
  border-radius: 14px;
  padding: 0.8rem;
  border: 1px solid #f1ece2;
  font-weight: 600;
}

.lesson-player {
  background: #ffffff;
  border-radius: 20px;
  padding: 1.4rem;
  border: 1px solid #f1ece2;
  box-shadow: var(--shadow);
  margin: 1.2rem 0 2rem;
}

.lesson-player.hidden {
  display: none;
}

.lesson-player-actions {
  display: flex;
  flex-wrap: wrap;
  gap: 0.6rem;
  margin-top: 0.8rem;
}

.drop-zone {
  border: 2px dashed #f2c27a;
  background: #fffaf1;
  border-radius: 14px;
  padding: 1rem;
  text-align: center;
  font-weight: 600;
  color: #8a5b13;
}

.hidden-input {
  display: none;
}

.ai-companion {
  display: grid;
  gap: 1rem;
  grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
  align-items: start;
}

.ai-bubble {
  background: linear-gradient(135deg, #ffe8c2, #e4f8f6);
  border-radius: 20px;
  padding: 1.4rem;
  border: 1px solid #f1ece2;
  box-shadow: var(--shadow);
  font-weight: 600;
}

.profile-form {
  display: grid;
  gap: 0.8rem;
}

.tag-row {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
}

.tag {
  background: #fff5db;
  border-radius: 999px;
  padding: 0.35rem 0.8rem;
  font-weight: 600;
  border: 1px solid #f6d4a3;
}

.video-url {
  display: grid;
  gap: 0.4rem;
}

.timeline {
  display: grid;
  gap: 1rem;
}

.timeline-item {
  background: #fff;
  border-radius: 16px;
  padding: 1rem 1.2rem;
  border: 1px solid #f1ece2;
  box-shadow: var(--shadow);
}

.timeline-step {
  font-weight: 700;
  color: #8a4b08;
  margin-bottom: 0.4rem;
}

.locked {
  opacity: 0.65;
}

.locked .button {
  cursor: not-allowed;
  box-shadow: none;
  transform: none;
}

.quiz-options {
  display: grid;
  gap: 0.6rem;
}

.quiz-option {
  padding: 0.8rem 1rem;
  border-radius: 14px;
  border: 1px solid var(--stroke);
  background: #fff;
  cursor: pointer;
  font-weight: 600;
}

.quiz-option.correct {
  border-color: #1f9a6e;
  background: #e7f7ef;
}

.quiz-option.wrong {
  border-color: #e4572e;
  background: #ffe9e3;
}

.completed {
  border-color: #1f9a6e;
  box-shadow: 0 0 0 2px rgba(31, 154, 110, 0.2);
}

.age-hidden {
  display: none !important;
}

.progress {
  height: 10px;
  background: #f0e7da;
  border-radius: 999px;
  overflow: hidden;
}

.progress span {
  display: block;
  height: 100%;
  background: linear-gradient(90deg, var(--brand), var(--brand-2));
  width: 0%;
  transition: width 0.3s ease;
}

.footer {
  padding: 2rem 0 3rem;
  text-align: center;
  color: #7a736b;
}

.fade-in {
  opacity: 0;
  transform: translateY(12px);
  animation: fadeUp 0.8s ease forwards;
}

.fade-in.delay {
  animation-delay: 0.2s;
}

.toast-container {
  position: fixed;
  right: 16px;
  bottom: 16px;
  display: grid;
  gap: 0.6rem;
  z-index: 999;
}

.toast {
  background: #1c1b1a;
  color: #fff;
  padding: 0.7rem 1rem;
  border-radius: 12px;
  box-shadow: var(--shadow);
  font-weight: 600;
  font-size: 0.95rem;
  opacity: 0;
  transform: translateY(8px);
  animation: toastIn 0.25s ease forwards;
}

.tutor-panel {
  position: fixed;
  right: 16px;
  bottom: 80px;
  width: min(320px, 90vw);
  background: #ffffff;
  border-radius: 18px;
  border: 1px solid var(--stroke);
  box-shadow: var(--shadow);
  padding: 1rem;
  z-index: 998;
}

.tutor-panel.hidden {
  display: none;
}

.tutor-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 0.6rem;
}

.tutor-title {
  font-weight: 700;
}

.tutor-close {
  border: none;
  background: #f2efe7;
  color: #5d5853;
  width: 28px;
  height: 28px;
  border-radius: 50%;
  cursor: pointer;
  font-weight: 700;
}

.tutor-message {
  margin: 0 0 0.8rem 0;
  color: var(--muted);
}

.tutor-actions {
  display: flex;
  flex-wrap: wrap;
  gap: 0.6rem;
}

.tutor-toggle {
  position: fixed;
  right: 16px;
  bottom: 24px;
  border: none;
  border-radius: 999px;
  padding: 0.6rem 1.1rem;
  background: var(--brand);
  color: #fff;
  font-weight: 700;
  cursor: pointer;
  box-shadow: var(--shadow);
  z-index: 997;
}

.tutor-toggle.hidden {
  display: none;
}

@keyframes toastIn {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@media (max-width: 800px) {
  .feature {
    grid-template-columns: 1fr;
  }

  .nav-links {
    display: none;
  }

  .hero-stats {
    grid-template-columns: 1fr 1fr;
  }
}
